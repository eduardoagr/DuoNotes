<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="DuoNotes.App"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:icon="clr-namespace:DuoNotes.Fonts"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <ResourceDictionary>

            <!--  colors  -->
            <Color x:Key="BackgroundLigthColor">#ffff</Color>
            <Color x:Key="BckgroundDarkColor">#000</Color>

            <!--  styles  -->
            <Style x:Key="EntrySyle"
                   TargetType="Entry">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Dark={StaticResource BackgroundLigthColor}, Light={StaticResource BckgroundDarkColor}}" />
                <Setter Property="PlaceholderColor"
                        Value="#A9A9A9" />
                <Setter Property="Visual"
                        Value="Material" />
            </Style>

            <Style x:Key="LabelStyle"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Dark={StaticResource BackgroundLigthColor}, Light={StaticResource BckgroundDarkColor}}" />
                <Setter Property="HorizontalTextAlignment"
                        Value="Center" />
                <Setter Property="FontSize"
                        Value="Small" />
                <Setter Property="VerticalTextAlignment"
                        Value="Center" />
            </Style>

            <Style x:Key="ButonStyle"
                   TargetType="Button">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Dark={StaticResource BackgroundLigthColor}, Light={StaticResource BckgroundDarkColor}}" />
                <Setter Property="HorizontalOptions"
                        Value="Fill" />
                <Setter Property="FontSize"
                        Value="Medium" />
                <Setter Property="VerticalOptions"
                        Value="Fill" />
            </Style>

            <Style TargetType="Label"
                   x:Key="CloseStyle">
                <Setter Property="Text"
                        Value="{Static icon:Material.Close}" />
                <Setter Property="TextColor"
                        Value="Red" />
                <Setter Property="FontSize"
                        Value="30" />
                <Setter Property="HorizontalTextAlignment"
                        Value="End" />
                <Setter Property="FontFamily"
                        Value="mat" />
            </Style>

            <Style TargetType="Label"
                   x:Key="HeadersStyle"
                   BasedOn="{StaticResource LabelStyle}">
                <Setter Property="FontAttributes"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="Title" />
                <Setter Property="HorizontalTextAlignment"
                        Value="Center" />
            </Style>

            <Style TargetType="Frame"
                   x:Key="FrameContainer">
                <Setter Property="Padding"
                        Value="0" />
                <Setter Property="BorderColor"
                        Value="Silver" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Dark={StaticResource BckgroundDarkColor},
                        Light={StaticResource BackgroundLigthColor}}" />
                <Setter Property="IsClippedToBounds"
                        Value="True" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
            </Style>

            <Style TargetType="buttons:SfChipGroup"
                   x:Key="ChipCollection">
                <Setter Property="ChipImageWidth"
                        Value="60" />
                <Setter Property="ChipBackgroundColor"
                        Value="Transparent" />
                <Setter Property="SelectedChipBackgroundColor"
                        Value="{AppThemeBinding Dark={StaticResource BackgroundLigthColor},
                        Light={StaticResource BckgroundDarkColor}}" />
                <Setter Property="Type"
                        Value="Choice" />
                <Setter Property="HeightRequest"
                        Value="60" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>