<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DuoNotes.View.NotesPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:community="http://xamarin.com/schemas/2020/toolkit"
             xmlns:icon="clr-namespace:DuoNotes.Fonts"
             xmlns:translate="clr-namespace:DuoNotes.Utils"
             xmlns:vm="clr-namespace:DuoNotes.ViewModel"
             Title="{translate:Translate Notes}"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BckgroundDarkColor},
                                      Light={StaticResource BackgroundLigthColor}}">

    <ContentPage.BindingContext>
        <vm:NotesPageModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <community:EventToCommandBehavior Command="{Binding PageDisappearCommand}"
                                          EventName="Disappearing" />
    </ContentPage.Behaviors>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ShareCommand}"
                     Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="ma"
                                 Glyph="{x:Static icon:MaterialIcons.ShareVariant}"
                                 Size="Large" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>

        <CollectionView ItemsSource="{Binding FireBaseNotebooks}"
                        SelectedItem="{Binding SeletedNote}"
                        SelectionChangedCommand="{Binding SeletedItemCommand}"
                        SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView Padding="10">
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Execute">
                                <SwipeItem BackgroundColor="{StaticResource DeleteItemColor}"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageModel}}, Path=DeleteItemCommand}}"
                                           CommandParameter="{Binding .}"
                                           IconImageSource="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageModel}}, Path=Glyph}"
                                           Text="{translate:Translate Delete}" />
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <Frame Style="{StaticResource FrameContainer}"
                               community:TouchEffect.PressedBackgroundColor="{StaticResource PressedItems}">
                            <StackLayout Padding="10">
                                <Label Style="{StaticResource DateLabelStyle}"
                                       Text="{Binding CreatedDate}" />
                                <Label Grid.Row="1"
                                       FontAttributes="Bold"
                                       Text="{Binding Name}" />
                            </StackLayout>

                        </Frame>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>


        <Frame x:Name="Fab"
               Style="{StaticResource FabButton}">

            <Label community:TouchEffect.Command="{Binding FabAnimationCommmand}"
                   community:TouchEffect.CommandParameter="{Reference Fab}"
                   Style="{StaticResource PlusStyle}"
                   Text="{Static icon:IconFont.Plus}" />
        </Frame>
    </StackLayout>
</ContentPage>