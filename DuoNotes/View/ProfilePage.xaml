<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DuoNotes.View.ProfilePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:icon="clr-namespace:DuoNotes.Fonts"
             xmlns:translate="clr-namespace:DuoNotes.Utils"
             xmlns:renders="clr-namespace:DuoNotes.Renders"
             xmlns:vm="clr-namespace:DuoNotes.ViewModel"
             Title="{translate:Translate userProfile}"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BckgroundDarkColor},
                                      Light={StaticResource BackgroundLigthColor}}">

    <ContentPage.BindingContext>
        <vm:ProfilePageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{x:Binding UpdateCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="ma"
                                 Glyph="{x:Static icon:MaterialIcons.ContentSave}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*">

        <StackLayout Padding="10"
                     Orientation="Horizontal">

            <ffimageloadingsvg:SvgCachedImage HeightRequest="40"
                                              Source="{Binding FireUser.PhotoUrl}"
                                              WidthRequest="40" />

            <Entry FontAttributes="Bold"
                   FontSize="Medium"
                   HorizontalOptions="FillAndExpand"
                   Text="{Binding DisplayName}"
                   Placeholder="{Binding FireUser.DisplayName}" />

        </StackLayout>

        <BoxView BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundLigthColor},
                                              Light={StaticResource BckgroundDarkColor}}"
                 HeightRequest="1"
                 VerticalOptions="EndAndExpand" />

        <renders:CollectionViewRender Grid.Row="1"
                                      Margin="20"
                                      ItemsSource="{Binding Avatars}"
                                      SelectedItem="{Binding SelectedAvatar}"
                                      SelectionChangedCommand="{Binding SelectedAvatarCommand}"
                                      SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <GridItemsLayout HorizontalItemSpacing="5"
                                 Orientation="Vertical"
                                 Span="2"
                                 VerticalItemSpacing="5" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ffimageloadingsvg:SvgCachedImage Margin="5"
                                                      HeightRequest="40"
                                                      HorizontalOptions="Start"
                                                      Source="{Binding .}"
                                                      WidthRequest="40" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </renders:CollectionViewRender>
    </Grid>
</ContentPage>